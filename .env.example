# Aditya Hotel Mysore - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Hotel Information
NEXT_PUBLIC_HOTEL_NAME="Your Hotel Name"
NEXT_PUBLIC_HOTEL_PHONE="+91 XXXXXXXXXX"
NEXT_PUBLIC_HOTEL_EMAIL="your-hotel@email.com"
NEXT_PUBLIC_HOTEL_ADDRESS="Your Hotel Address"

# Hotel Rating and Stats
NEXT_PUBLIC_HOTEL_RATING="4.8"
NEXT_PUBLIC_TOTAL_ROOMS="50"
NEXT_PUBLIC_YEARS_OF_SERVICE="15"
NEXT_PUBLIC_HAPPY_GUESTS="12000"

# Location Information
NEXT_PUBLIC_CITY="Your City"
NEXT_PUBLIC_STATE="Your State"
NEXT_PUBLIC_COUNTRY="Your Country"
NEXT_PUBLIC_PINCODE="000000"

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/yourpage"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/yourpage"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/yourpage"
NEXT_PUBLIC_LINKEDIN_URL="https://linkedin.com/company/yourpage"

# Business Hours
NEXT_PUBLIC_CHECKIN_TIME="2:00 PM"
NEXT_PUBLIC_CHECKOUT_TIME="12:00 PM"
NEXT_PUBLIC_FRONT_DESK="24/7"

# Development Settings
NEXT_PUBLIC_SITE_URL="https://your-site.com"
NEXT_PUBLIC_DEVELOPER_NAME="Your Developer"
NEXT_PUBLIC_DEVELOPER_URL="https://yourdeveloper.com"

# SEO Settings
NEXT_PUBLIC_META_TITLE="Your Hotel - Luxury Accommodation"
NEXT_PUBLIC_META_DESCRIPTION="Your hotel description for SEO"
NEXT_PUBLIC_META_KEYWORDS="hotel, accommodation, luxury"

# Room Types and Pricing
NEXT_PUBLIC_STANDARD_ROOM_PRICE="0000"
NEXT_PUBLIC_DELUXE_ROOM_PRICE="0000"
NEXT_PUBLIC_EXECUTIVE_ROOM_PRICE="0000"
NEXT_PUBLIC_ROYAL_SUITE_PRICE="0000"

# API Configuration
NEXT_PUBLIC_API_URL="/api"
CONTACT_EMAIL_TO="your-contact@email.com"
CONTACT_EMAIL_FROM="noreply@your-site.com"

# Feature Flags
NEXT_PUBLIC_ENABLE_BOOKING="true"
NEXT_PUBLIC_ENABLE_GALLERY="true"
NEXT_PUBLIC_ENABLE_CONTACT_FORM="true"
NEXT_PUBLIC_ENABLE_ROOM_DETAILS="true"

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# Maps Integration
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
NEXT_PUBLIC_HOTEL_LATITUDE="0.0000"
NEXT_PUBLIC_HOTEL_LONGITUDE="0.0000"
